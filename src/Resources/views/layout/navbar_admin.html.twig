<nav class="env-navbar" id="env-navbar">
    <div class="env-navbar-container">
        {# Left Side: Environment Badge #}
        <div class="env-navbar-left">
            {% if app.environment != 'prod' %}
                <span class="env-badge env-badge-{{ app.environment }}">
                    <i class="fas fa-circle-dot me-1"></i>
                    {{ app.environment|upper }}
                </span>
            {% else %}
                <span class="env-badge env-badge-prod">
                    <i class="fas fa-shield-halved me-1"></i>
                    ADMIN MODE
                </span>
            {% endif %}
        </div>

        {# Right Side: Admin Actions #}
        {% if is_granted('ROLE_ADMIN') %}
            <div class="env-navbar-right">
                <a href="{{ path("admin_dashboard") }}"
                   class="env-nav-link"
                   title="{{ 'frontend.goToAdmin'|trans }}">
                    <i class="fas fa-screwdriver-wrench me-1"></i>
                    <span class="d-none d-sm-inline">Admin</span>
                </a>
                <a href="{{ path("logout") }}"
                   class="env-nav-link env-nav-link-logout"
                   title="{{ 'backend.operation.logout'|trans }}">
                    <i class="fas fa-right-from-bracket me-1"></i>
                    <span class="d-none d-sm-inline">Logout</span>
                </a>
            </div>
        {% endif %}
    </div>
</nav>

