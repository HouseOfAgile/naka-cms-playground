<nav id="main-navbar"
     class="navbar fixed-top navbar-expand-md navbar-light bg-white shadow-lg">
    <div class="container py-2">
        <div class="collapse navbar-collapse flex-grow-1"
             id="navbarSupportedContent">
            {# align menu in the middle #}
            <div class="main-menu">{{ knp_menu_render("main") }}</div>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle"
                       href="#"
                       id="dropdown-language"
                       role="button"
                       data-bs-toggle="dropdown"
                       aria-expanded="false">{{ app.request.locale|locale_name(app.request.locale) |u.title }}</a>
                    <div class="dropdown-menu dropdown-menu-right"
                         aria-labelledby="dropdown-language">
                        {% for locale in all_locales %}
                            {% if locale != app.request.locale %}
                                <a class="dropdown-item"
                                   href="{{ path(app.request.attributes.get('_route') , app.request.attributes.get('_route_params')|merge({_locale: locale})) }}">{{ locale | locale_name | u.title }}</a>
                            {% endif %}
                        {% endfor %}
                    </div>
                </li>
            </ul>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="btn-group m-2" role="group" aria-label="Admin links">
                <a href="{{ path("admin_dashboard") }}"
                   role="button"
                   class="admin-link nav-item nav-link btn btn-success text-white p-2">
                    <i class="fa-solid fa-screwdriver-wrench"></i>
                    {{ 'frontend.goToAdmin'|trans }}
                </a>
                <a href="{{ path("logout") }}"
                   role="button"
                   class="nav-item nav-link btn btn-danger text-white p-2">
                    <i class="fa fa-sign-out-alt"></i>
                </a>
            </div>
        {% endif %}
    </div>
</nav>
<div class="container">
    <div class="row">
        <div class="col-12 pt-3">
            <a class="navbar-brand" href="{{ path("app_homepage") }}">
                <img class="img-fluid p-4"
                     src="{{ '/asset/logo_spitzmuehle_transparent.png'| imagine_filter("logo_resize") }}" />
            </a>
        </div>
    </div>
</div>
