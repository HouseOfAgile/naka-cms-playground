<!-- FOOTER -->
<footer class="w-100 py-4 flex-shrink-0">
	<div class="container py-4">
		<div class="row gy-4 gx-5">
			<div class="col-lg-6 col-md-6">
				<h5 class="h1 text-white">{{ 'footer.title' | trans }}</h5>
				<p class="small text-muted">{{ 'footer.main-text' | trans }}</p>
				<p class="small text-muted">{{ openingStatus() }}</p>
				<div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
					<strong>{{ application_name }}</strong>, 2021 -
					{{ 'now'|date('Y') }}, v.{{ application_version }}
					[{{ app.environment }}]<br/>
					<small class="text-muted">Made with
						<i class="fa fa-plug text-primary"></i>
						by House of Agile agency</small>
				</div>
			</div>
			<div class="col-lg-3 offset-3 col-md-6">
				<div class="ms-5">
					<h5 class="text-white mb-3">{{ 'footer.quick-links' | trans }}</h5>
					{{ knp_menu_render('footer') }}
				</div>
			</div>
		</div>
	</div>
</footer>
