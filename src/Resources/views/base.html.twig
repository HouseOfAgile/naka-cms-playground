<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <title>
            {% block master_title %}
                {% block title %}
                    Welcome!
                {% endblock title %}
                -
                {{ websiteInfo.translatedTitle |default(application_name) }}
            {% endblock master_title %}
        </title>
        {% block master_meta %}
            <meta name="description"
                  content="{% block meta_description %}{{ websiteInfo.translatedDescription | default('meta.defaultDescription' | trans) }}{% endblock meta_description %}">
            <meta name="keywords"
                  content="{% block meta_keywords %}{{ websiteInfo.translatedKeywords | default('meta.defaultKeywords' | trans) }}{% endblock meta_keywords %}">
        {% endblock master_meta %}
        <link rel="icon" href="data:image/svg+xml,
            <svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22>
                <text y=%221.2em%22 font-size=%2296%22>⚫️</text>
            </svg>
            ">
            {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
            {% block stylesheets %}
                {{ encore_entry_link_tags("app") }}
                <link rel="stylesheet"
                      type="text/css"
                      href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css" />
            {% endblock stylesheets %}
            {% block javascripts %}
                {{ encore_entry_script_tags("app") }}
                {% set ga_id = 'global.google-analytics'| nakaParameter %}
                {% if ga_id %}
                    {% include "@NakaCMS/fragment/_google_analytics.html.twig" %}
                {% endif %}
            {% endblock javascripts %}
            {% block stylesheets_extra %}
            {% endblock stylesheets_extra %}
        </head>
        <body data-aos-easing="ease-out-back"
              data-aos-duration="1000"
              data-aos-delay="0">
            {% block body %}
            {% endblock body %}
            {% block javascripts_extra %}
                <script src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js"
                        data-cfasync="false"></script>
                <script>
				window.cookieconsent.initialise({
"palette": {
"popup": {
"background": "#000"
},
"button": {
"background": "#f1d600"
}
},
"theme": "classic"
});
			
                </script>
                {{ encore_entry_script_tags("appBottom") }}
            {% endblock javascripts_extra %}
        </body>
    </html>
