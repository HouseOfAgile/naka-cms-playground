{% extends '@NakaCMS/email/base_email_layout.html.twig' %}

{% block title %}
	{{ 'email.resetPassword.title' | trans({'%name%': user.firstName, '%applicationName%': application_name }) }}
{% endblock title %}

{% block impact_message %}
	{{ 'email.resetPassword.impactMessage' | trans({'%applicationName%': application_name }) }}
{% endblock impact_message %}

{% block email_content %}
	{{ 'email.resetPassword.content' | trans({'%applicationName%': application_name }) | raw }}
	<p class="block">
		<a href="{{ url('admin_dashboard') }}">{{ url('admin_dashboard') }}</a>
	</p>
{% endblock email_content %}
