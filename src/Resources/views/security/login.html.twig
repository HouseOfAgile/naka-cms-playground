{% extends '@NakaCMS/layout/base-layout.html.twig' %}

{% block title %}{{ 'loginForm.title' | trans }}
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-6 offset-3">
				<div class="login-form bg-light mt-4 p-5">
					<div class="row">
						<form method="post" action="{{ path('app_login') }}" class="row g-3">
							<h1 class="h3 mb-3 font-weight-normal">{{ 'loginForm.header' | trans }}</h1>

							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							<div class="col-8 offset-2">
								<label for="inputEmail">{{ 'loginForm.email' | trans }}</label>
								<input type="text" name="email" id="inputEmail" class="form-control" value="{{ last_username }}" required autofocus>
							</div>
							<div class="col-8 offset-2">
								<label for="inputPassword">{{ 'loginForm.password' | trans }}</label>
								<input type="password" name="password" id="inputPassword" class="form-control" required>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<div class="col-10 offset-1 text-center py-4">
								<button class="btn btn-lg btn-gls-impact" type="submit">
									{{ 'loginForm.signIn' | trans }}
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
