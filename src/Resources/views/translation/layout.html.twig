{% extends '@NakaCMS/backend/layout/layout-full-width.html.twig' %}

{% set form_size = 'col-12' %}

{% block content_title %}
	{% block lexik_title %}{% endblock %}
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{% block lexik_stylesheets %}
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="{{ asset('bundles/lexiktranslation/ng-table/ng-table.min.css') }}">
		<link rel="stylesheet" href="{{ asset('css/lexik.css') }}">

	{% endblock %}
{% endblock stylesheets %}

{% block flash_message %}

	{% block lexik_flash_message %}
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					{% set flashes = app.session.flashbag.all() %}
					{% if flashes | length > 0 %}
						{% for type, messages in flashes %}
							{% for message in messages %}
								<div class="alert alert-{{ type }}">{{ message|raw }}</div>
							{% endfor %}
						{% endfor %}
					{% endif %}
				</div>
			</div>
		</div>
	{% endblock lexik_flash_message %}
{% endblock flash_message %}


{% block content %}
	{% block lexik_content '' %}
{% endblock content %}

{% block body_javascript %}

	{% block lexik_javascript_footer %}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
		<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.9/angular.min.js"></script>
		<script src="{{ asset('bundles/lexiktranslation/ng-table/ng-table.min.js') }}"></script>
	{% endblock %}
{% endblock body_javascript %}
