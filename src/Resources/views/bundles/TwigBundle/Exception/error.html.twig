{% extends '@NakaCMS/layout/base-layout.html.twig' %}

{% block meta_title %}
    {{ 'error.metaTitle' | trans }}
{% endblock meta_title %}

{% block main_navbar %}
    {% include "@NakaCMS/layout/navbar_error.html.twig" %}
{% endblock main_navbar %}

{% block main %}
    <div class="container py-5 text-center">
        <div class="row py-5">
            <div class="col-12">
                <h1 class="text-danger">{{ 'error.title' | trans }}</h1>
                <p class="fs-5">{{ 'error.message.general' | trans }}</p>
                {% if status_code == 404 %}
                    <p class="text-warning">{{ 'error.message.notFound' | trans }}</p>
                {% elseif status_code == 500 %}
                    <p class="text-danger">{{ 'error.message.internal' | trans }}</p>
                {% else %}
                    <p>{{ 'error.message.unknown' | trans }}</p>
                {% endif %}
                <div class="mt-4">
                    <a href="{{ path("app_homepage") }}" class="btn btn-primary">{{ 'error.backToHomepage' | trans }}</a>
                    <a href="{{ path("app_contact") }}" class="btn btn-outline-secondary">{{ 'error.contactSupport' | trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock main %}
